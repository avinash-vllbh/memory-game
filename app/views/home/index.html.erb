<h3> Welcome <%= "#{@user.first_name} #{@user.last_name}" %> </h3>
<br>
<div class = "row">
  <div class = "col-md-7">
    <h3> Game Statistics </h3>
    <table class = "table table-striped" >
      <tbody>
        <tr> 
          <td> Number of Games played </td>
          <td> <%= @user.games.count %> </td>  
        </tr>
        <tr> 
          <td> Number of games completed </td>
          <td> <%= @user.games.where(status: "completed").count %> </td>
        </tr>
      </tbody>
    </table>
    <div>
    <%= link_to "My Games", games_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div class = "col-md-4 col-md-offset-1">
    <h2> Account Details </h2>
    <table class = "table table-striped" >
      <tbody>
        <tr> 
          <td>First Name</td>
          <td><%= @user.first_name %></td>
        </tr>
        <tr>
          <td>Last Name</td>
          <td><%= @user.last_name %></td>
        </tr>
        <tr>
          <td>Email</td>
          <td><%= @user.email %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to "Update Account", edit_user_registration_path(@user), class: "btn btn-success" %>
  </div>
</div>
